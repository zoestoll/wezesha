        <div class="donation-box">
            <div class="title">Donation Information</div>

            <div class="fields">
                <input type="text" id="firstName" placeholder="First Name"> </input>
                <input type="text" id="lastName" placeholder="Last Name"> </input>
                <input type="text" id="email" placeholder="Email"> </input>
            </div>
            
            <div class="amount">
                <div class="button">$30</div>
                <div class="button">$50</div>
                <div class="button">$100</div>
                <div class="button">$<input type="text" class="set-amount" placeholder=""> </input></div>
            </div>

            <div class="causes">
                <h1>Dedicate money to specific cause</h1>
                <input type="checkbox" id="educ" class="checkbox" />
                    <label for="educ">Supports Education: School Fees</label>
                    <p>250 USD a year sends a child with disabilities to school</p>
                <br/>
                <input type="checkbox" id="work" class="checkbox" />
                    <label for="work">Outreach Workshops</label>
                    <p>100 USD covers cost of a weekend workshop on nutrition, disability support or other community health topic</p>
                <br/>
                <input type="checkbox" id="med" class="checkbox" />
                    <label for="med">Supporting Medical and Surgical Care</label>
                    <p>50 USD offers room and board at House of Hope for a parent with a child seeking local medical and surgical care</p>
                <br/>
                <input type="checkbox" id="surg" class="checkbox" />
                    <label for="surg">Essential Corrective Surgeries</label>
                    <p>500 USD provides transportation and surgery for a child needing to travel for life saving but locally unavailable surgical care.</p>
                <br/>
            </div>
            <!-- <div class="donation_form"> -->
                <!-- <h1 id="about_head">Donate to Wezesha Kupaa </h1> -->
            <form onsubmit="sendPaymentInfo()" method="post">
                <input type="hidden" name="cmd" value="_donations">
                <input type="hidden" name="business" value="online.donations@ywamtyler.org">
                <input type="hidden" name="item_name" value="Wezesha Kupaa">
                <input id="donateInput" type="text" name="first_name" placeholder="First Name" value="">
                <input id="donateInput" type="text" name="last_name" placeholder="Last Name" value="">
                <input id="donateInput" type="text" name="address1" placeholder="Address Line 1" value="">
                <input id="donateInput" type="text" name="address2" placeholder="Address Line 2" value="">
                <input id="donateInput" type="text" name="city" placeholder="City" value="">
                <input id="donateInput" type="text" name="state" placeholder="State" value="">
                <input id="donateInput" type="text" name="zip" placeholder="Zip" value="">
                <input id="donateInput" type="text" name="email" placeholder="Email" value="">
                <input id="donateInput" type="text" name="amount" placeholder="Amount (USD)" value="">
            </form> 
            <script>
            function sendPaymentInfo() {
                console.log("Sending payment info");
                $.post('/donations', {amount: 50});
            }
            // <script type="text/javascript">
            //     $.post('/donations', {amount: 50});
            </script>
            <!-- </div> -->

            <div class="donate-button">
                <form name="_xclick" action="https://www.paypal.com/cgi-bin/webscr" method="post">
                    <input type="hidden" name="cmd" value="_donations">
                    <input type="hidden" name="business" value="online.donations@ywamtyler.org">
                    <input type="hidden" name="item_name" value="Youth With A Mission">
                    <input type="hidden" name="currency_code" value="USD">
                    <input type="hidden" name="amount" value="">
                    <input type="image" src="http://www.paypal.com/en_US/i/btn/btn_donate_LG.gif" border="0">
                </form>
                <script type="text/javascript">
                $.post('/donations', {amount: 100});
            </script>
            </div> <!-- End class 'donate-button' -->
        </div> <!-- End class 'donation-box' -->
    </div> <!-- End class 'donation-container' -->

