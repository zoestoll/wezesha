<!doctype html>
<html class="donations_main">
<head>
    <% include header %>
</head>

<a <% if (logged_in === 1) { %> <a class="post-button" href="/write">Write a new post! <% } %> <% if (logged_in === 0)  { %> DOG <% } %> </a>

     <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                  <!-- Render each blog post -->
                  <% posts.forEach((post) => { %>
                        <a href="/post/<%= post.id %>" class="list-group-item">
                             <!-- Title -->
                            <h4 class="list-group-item-heading"><%= post.title %></h4>
                            <!-- Author -->
                            <p class="list-group-item-text">by <%= post.author %></p>
                            <!-- Body -->
                            <p class="list-group-item-text"><%= post.body %></p>
                            <!-- Date/Time -->
                            <p><span class="glyphicon glyphicon-time"></span> <%= post.timestamp %></p>
                        </a>
                  <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

<footer>
    <% include footer %>
</footer>

    
